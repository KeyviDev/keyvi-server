# - Try to find TPIE
# Once done this will define
#
#  TPIE_FOUND - system has TPIE
#  TPIE_INCLUDE_DIR - the Tpie include directory
#  TPIE_LIBRARIES - Link these to use Tpie


IF (TPIE_INCLUDE_DIR AND TPIE_LIBRARIES)
    SET(Tpie_FIND_QUIETLY TRUE)
ENDIF (TPIE_INCLUDE_DIR AND TPIE_LIBRARIES)

FIND_PATH(TPIE_INCLUDE_DIR tpie/ami.h )

FIND_LIBRARY(TPIE_LIBRARIES NAMES tpie )

INCLUDE(FindPackageHandleStandardArgs)
FIND_PACKAGE_HANDLE_STANDARD_ARGS(TPIE DEFAULT_MSG TPIE_LIBRARIES TPIE_INCLUDE_DIR)

MARK_AS_ADVANCED(TPIE_INCLUDE_DIR TPIE_LIBRARIES)

